{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      changeDictionaryDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

T
{
    internalField   uniform 0;
    boundaryField
	{
        ".*"
  		{
            type            fixedValue;
			value			uniform 0;
        }
        "DeepSpace_to_DeepSpaceSolar"
  		{
            type            zeroGradient;
        }
        "DeepSpace_to_Plate.*"
        {
            type            compressible::turbulentTemperatureRadCoupledMixed;
            Tnbr            T;
            kappaMethod     fluidThermo;
            qrNbr           none;
            qr              qr;
            value           uniform 0;
        }
    }
}

qr
{
    internalField   uniform 0;
    boundaryField
    {
        ".*"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            qro             uniform 0;
            emissivity      uniform 1.0;
            value           uniform 0;
        }

        "DeepSpace_to_DeepSpaceSolar"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            qro             uniform 0;
            emissivity      uniform 1.0;
            value           uniform 0;
        }

        "DeepSpace_to_PlatePlusZ"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            emissivity      uniform 0.86;
            qro             uniform 0;
            value           uniform 0;
        }

        "DeepSpace_to_PlateMinZ"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            emissivity      uniform 0.86;
            qro             uniform 0;
            value           uniform 0;
        }

        "DeepSpace_to_PlatePlusX"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            emissivity      uniform 0.86;
            qro             uniform 0;
            value           uniform 0;
        }

        "DeepSpace_to_PlatePlusY"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            emissivity      uniform 0.03;
            qro             uniform 0;
            value           uniform 0;
        }

        "DeepSpace_to_PlateMinY"
        {
            type            greyDiffusiveRadiationViewFactor;
            emissivityMode  lookup;
            emissivity      uniform 0.03;
            qro             uniform 0;
            value           uniform 0;
        }

    }
}


